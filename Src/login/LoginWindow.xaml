<Window x:Class="G12_ChessApplication.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:G12_ChessApplication"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="LoginBtn" Content="Log in" HorizontalAlignment="Left" Margin="286,217,0,0" VerticalAlignment="Top" Click="LoginBtn_Click"/>
        <Button x:Name="SignUpBtn" Content="Sign up" HorizontalAlignment="Left" Margin="362,217,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UsernameBox" HorizontalAlignment="Left" Margin="286,136,0,0" TextWrapping="Wrap" Text="admin" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="286,179,0,0" VerticalAlignment="Top" Width="120" Password="password"/>

    </Grid>
</Window>
